<body>

<div class="container">
  <h2>Identifique-se</h2>
  <input id="playerName" placeholder="Seu nome">

  <h3>Escolha uma presença</h3>

  <div class="characters">
    <div class="char" onclick="selectChar('O Campeão')">SILHUETA A</div>
    <div class="char" onclick="selectChar('O Maculado')">SILHUETA B</div>
    <div class="char" onclick="selectChar('O Wendigo')">SILHUETA C</div>
  </div>

  <button onclick="confirmChoice()">ADENTRAR</button>
</div>

<script>
  let chosenChar = null;

  function selectChar(name) {
    chosenChar = name;
    console.log("Personagem selecionado:", name);
  }

  function confirmChoice() {
    const player = document.getElementById("playerName").value;

    if (!player || !chosenChar) {
      alert("Escolha um nome e um personagem.");
      return;
    }

    console.log("Jogador:", player);
    console.log("Escolha:", chosenChar);

    alert(player + " adentrou como " + chosenChar);
